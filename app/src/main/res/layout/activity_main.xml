<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_pink"
    tools:context=".MainActivity">
    <LinearLayout
        android:paddingHorizontal="@dimen/_12sdp"
        android:background="@color/bg_pink_tua"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal">
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_ios_24"/>
        <TextView
            android:textSize="@dimen/_12ssp"
            android:id="@+id/tv_nama"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
        <ImageView
            android:id="@+id/img_logout"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:src="@drawable/baseline_logout_24"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_predict"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cekmata"
            android:background="@drawable/card_main"
            android:drawableStart="@drawable/ophthalmology" />
        <TextView
            android:id="@+id/tv_artikel"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artikel"
            android:background="@drawable/card_main"
            android:drawableStart="@drawable/articles" />
        <TextView
            android:id="@+id/tv_about"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:background="@drawable/card_main"
            android:drawableStart="@drawable/about" />
    </LinearLayout>


</LinearLayout>